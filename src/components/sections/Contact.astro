<section id="contact" class="min-h-screen flex items-center justify-center bg-[#050505] text-white relative rounded-t-[3rem]">
  <!-- Background Gradient -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute bottom-0 left-1/4 w-[600px] h-[600px] bg-purple-900/10 rounded-full blur-[150px]"></div>
    <div class="absolute top-1/4 right-1/4 w-[400px] h-[400px] bg-indigo-900/10 rounded-full blur-[150px]"></div>
  </div>
  
  <div class="container mx-auto px-6 text-center relative z-10 py-32">
    <span class="text-xs font-medium text-white/40 uppercase tracking-[0.3em] mb-6 block">
      Get in Touch
    </span>
    <h2 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white mb-8">
      Let's Talk
    </h2>
    <p class="text-xl text-white/40 mb-12 max-w-lg mx-auto">
      Have a project in mind? I'd love to hear about it.
    </p>
    <a 
      href="mailto:hello@jordan.dev" 
      class="inline-flex items-center gap-3 px-8 py-4 bg-white text-[#050505] font-semibold rounded-full hover:bg-white/90 transition-colors group"
    >
      <span>hello@jordan.dev</span>
      <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
    
    <!-- Social Links -->
    <div class="mt-16 flex items-center justify-center gap-8">
      <a href="#" class="text-white/30 hover:text-white transition-colors text-sm uppercase tracking-wider">
        GitHub
      </a>
      <span class="w-1 h-1 bg-white/20 rounded-full"></span>
      <a href="#" class="text-white/30 hover:text-white transition-colors text-sm uppercase tracking-wider">
        LinkedIn
      </a>
      <span class="w-1 h-1 bg-white/20 rounded-full"></span>
      <a href="#" class="text-white/30 hover:text-white transition-colors text-sm uppercase tracking-wider">
        Twitter
      </a>
    </div>
  </div>
</section>
