---
import MagneticButton from "../ui/MagneticButton.jsx";
import FooterHeader from "../parallax/FooterHeader.jsx";

// Get current year dynamically
const currentYear = new Date().getFullYear();
---

<section id="contact" class="min-h-screen flex flex-col justify-between bg-[#050505] text-white rounded-t-[50px] shadow-[0_-10px_40px_-15px_rgba(0,0,0,0.5)]">
  
  <!-- Main Content -->
  <div class="flex-1 flex items-center justify-center px-6 py-32">
    <div class="max-w-5xl mx-auto text-center">
      
      <!-- Parallax Header -->
      <FooterHeader client:visible />
      
      <!-- Subtitle -->
      <p class="mt-8 text-lg md:text-xl text-white/40 max-w-lg mx-auto">
        Have a project in mind? I'd love to hear about it. Let's create something amazing together.
      </p>
      
      <!-- CTA Button -->
      <div class="mt-12">
        <MagneticButton 
          client:load 
          href="mailto:hello@jordan.dev" 
          variant="solid"
        >
          Get in Touch
        </MagneticButton>
      </div>
      
    </div>
  </div>
  
  <!-- Bottom Bar (Footer) -->
  <footer class="border-t border-white/10 px-6 py-8">
    <div class="container mx-auto">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        
        <!-- Left: Copyright -->
        <p class="text-sm text-white/30">
          Â© {currentYear} Jordan Sutarto. All rights reserved.
        </p>
        
        <!-- Center: Social Links -->
        <div class="flex items-center gap-8">
          <a 
            href="https://github.com" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-sm text-white/40 hover:text-white transition-colors relative group"
          >
            GitHub
            <span class="absolute bottom-0 left-0 w-0 h-[1px] bg-white transition-all group-hover:w-full"></span>
          </a>
          <a 
            href="https://linkedin.com" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-sm text-white/40 hover:text-white transition-colors relative group"
          >
            LinkedIn
            <span class="absolute bottom-0 left-0 w-0 h-[1px] bg-white transition-all group-hover:w-full"></span>
          </a>
          <a 
            href="https://twitter.com" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-sm text-white/40 hover:text-white transition-colors relative group"
          >
            Twitter
            <span class="absolute bottom-0 left-0 w-0 h-[1px] bg-white transition-all group-hover:w-full"></span>
          </a>
        </div>
        
        <!-- Right: Local Time -->
        <p class="text-sm text-white/30">
          <span class="text-white/20">Local time:</span> 
          <span id="local-time" class="font-mono">--:--</span>
        </p>
        
      </div>
    </div>
  </footer>
  
</section>

<script>
  // Update local time
  function updateTime() {
    const timeEl = document.getElementById('local-time');
    if (timeEl) {
      const now = new Date();
      const time = now.toLocaleTimeString('en-US', { 
        hour: '2-digit', 
        minute: '2-digit',
        hour12: false 
      });
      timeEl.textContent = time;
    }
  }
  
  updateTime();
  setInterval(updateTime, 60000); // Update every minute
</script>
