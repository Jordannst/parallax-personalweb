---
import { projects } from "../../data/projects";
import ProjectCard from "../parallax/ProjectCard.jsx";
---

<section id="projects" class="relative py-32 md:py-48 bg-[#050505] text-white rounded-t-[3rem] min-h-screen">
  
  <!-- Section Header -->
  <div class="container mx-auto px-6 md:px-12 mb-24 md:mb-32">
    <div class="max-w-4xl">
      <span class="text-xs font-medium text-white/40 uppercase tracking-[0.3em] mb-4 block">
        Selected Works
      </span>
      <h2 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white leading-tight">
        Featured<br />
        <span class="text-white/40">Projects</span>
      </h2>
    </div>
  </div>

  <!-- Projects Gallery -->
  <div class="space-y-24 md:space-y-40 lg:space-y-56">
    {projects.map((project, index) => (
      <div class="container mx-auto px-4 md:px-8 lg:px-12">
        <ProjectCard 
          client:visible
          title={project.title}
          description={project.description}
          techStack={project.techStack}
          imageSrc={project.imagePath}
          index={index}
        />
      </div>
    ))}
  </div>

  <!-- Bottom CTA -->
  <div class="container mx-auto px-6 md:px-12 mt-32 md:mt-48">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-8 py-12 border-t border-white/10">
      <p class="text-2xl md:text-3xl text-white/60 max-w-lg">
        Interested in working together? Let's create something amazing.
      </p>
      <a 
        href="#contact" 
        class="inline-flex items-center gap-3 text-white hover:text-white/80 transition-colors group"
      >
        <span class="text-sm font-medium uppercase tracking-[0.2em]">Get in Touch</span>
        <svg 
          class="w-5 h-5 transition-transform group-hover:translate-x-1" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>

</section>
