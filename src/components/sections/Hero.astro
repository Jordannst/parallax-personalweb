---
import HeroTitle from "../parallax/HeroTitle.jsx";
import HeroParallaxWrapper from "../parallax/HeroParallaxWrapper.jsx";
import AnimatedGradientMesh from "../ui/AnimatedGradientMesh.jsx";

interface Props {
  name?: string;
  lastName?: string;
  role?: string;
}

const {
  name = "JORDAN",
  lastName = "SUTARTO",
  role = "Web Developer & UI Enthusiast"
} = Astro.props;
---

<HeroParallaxWrapper client:load>
  <section class="relative h-screen w-full flex items-center justify-center overflow-hidden">
    
    <!-- Animated Gradient Mesh Background (z-0) -->
    <div class="absolute inset-0 pointer-events-none z-0">
      <AnimatedGradientMesh client:load />
    </div>

    <!-- Vertical Lines Decoration - More subtle -->
    <div class="absolute inset-0 pointer-events-none overflow-hidden opacity-[0.03] z-[1]">
      <div class="absolute left-[10%] top-0 bottom-0 w-[1px] bg-white"></div>
      <div class="absolute left-[30%] top-0 bottom-0 w-[1px] bg-white"></div>
      <div class="absolute left-[50%] top-0 bottom-0 w-[1px] bg-white"></div>
      <div class="absolute left-[70%] top-0 bottom-0 w-[1px] bg-white"></div>
      <div class="absolute left-[90%] top-0 bottom-0 w-[1px] bg-white"></div>
    </div>

    <!-- Main Content (z-10) - Typography on top -->
    <div class="relative z-10 px-6 flex flex-col items-center">
      <HeroTitle 
        client:load 
        name={name} 
        lastName={lastName} 
        role={role} 
      />
    </div>

    <!-- Corner Text Element -->
    <div class="absolute bottom-8 left-8 text-[10px] text-white/20 tracking-[0.3em] uppercase hidden md:block z-10">
      Crafting Digital Experiences
    </div>

  </section>
</HeroParallaxWrapper>
