---
import InfiniteMarquee from "../ui/InfiniteMarquee.jsx";

const techStack = [
  "REACT",
  "ASTRO", 
  "EXPRESS.JS",
  "PRISMA",
  "TAILWIND",
  "NODE.JS",
  "POSTGRESQL",
  "TYPESCRIPT",
  "NEXT.JS",
  "FRAMER MOTION"
];
---

<section class="relative py-32 md:py-48 bg-[#F3F2ED] text-[#1a1a1a] overflow-hidden min-h-screen flex items-center rounded-t-[3rem]">
  
  <div class="w-full">
    <!-- Section Label Top -->
    <div class="container mx-auto px-6 mb-16 text-center">
      <span class="text-xs font-medium text-[#1a1a1a]/40 uppercase tracking-[0.3em]">
        Technologies I Work With
      </span>
    </div>

    <!-- Rotated Container for Brutalist Effect -->
    <div class="transform -rotate-2 py-12">
      
      <!-- Marquee Row 1 - Left Direction -->
      <div class="mb-4">
        <InfiniteMarquee 
          client:visible 
          items={techStack} 
          direction="left" 
          speed={30}
          outlined={true}
          theme="light"
        />
      </div>

      <!-- Marquee Row 2 - Right Direction -->
      <div>
        <InfiniteMarquee 
          client:visible 
          items={techStack} 
          direction="right" 
          speed={35}
          outlined={false}
          theme="light"
        />
      </div>

    </div>
  </div>

</section>
