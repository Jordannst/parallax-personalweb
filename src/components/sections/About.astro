---
import TextReveal from "../parallax/TextReveal.jsx";

const aboutText = "I am a creative developer based in Indonesia, specializing in building scalable web applications. I combine technical precision with visual aesthetics to create immersive digital experiences that captivate users and drive results.";
---

<section id="about" class="relative min-h-screen flex flex-col justify-center py-32 md:py-48 bg-[#F3F2ED] text-[#1a1a1a] rounded-t-[3rem]">
  
  <div class="container mx-auto px-6 md:px-12 relative z-10">
    
    <!-- Section Header -->
    <div class="text-center mb-16 md:mb-24">
      <span class="text-xs font-medium text-[#1a1a1a]/40 uppercase tracking-[0.3em]">
        Who I Am
      </span>
    </div>

    <!-- Text Reveal Component -->
    <TextReveal client:visible text={aboutText} theme="light" />

    <!-- Stats -->
    <div class="mt-24 md:mt-32 grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto text-center">
      <div>
        <span class="block text-4xl md:text-5xl font-bold text-[#1a1a1a] mb-2">3+</span>
        <span class="text-sm text-[#1a1a1a]/40 uppercase tracking-wider">Years Experience</span>
      </div>
      <div>
        <span class="block text-4xl md:text-5xl font-bold text-[#1a1a1a] mb-2">20+</span>
        <span class="text-sm text-[#1a1a1a]/40 uppercase tracking-wider">Projects Done</span>
      </div>
      <div>
        <span class="block text-4xl md:text-5xl font-bold text-[#1a1a1a] mb-2">15+</span>
        <span class="text-sm text-[#1a1a1a]/40 uppercase tracking-wider">Happy Clients</span>
      </div>
      <div>
        <span class="block text-4xl md:text-5xl font-bold text-[#1a1a1a] mb-2">âˆž</span>
        <span class="text-sm text-[#1a1a1a]/40 uppercase tracking-wider">Coffee Consumed</span>
      </div>
    </div>

  </div>

</section>
