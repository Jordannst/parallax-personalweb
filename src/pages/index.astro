---
import BaseLayout from '../layouts/BaseLayout.astro';
import Preloader from '../components/ui/Preloader.jsx';
import Hero from '../components/sections/Hero.astro';
import About from '../components/sections/About.astro';
import ZoomSection from '../components/parallax/ZoomSection.jsx';
import ProjectsGallery from '../components/sections/ProjectsGallery.astro';
import TechStack from '../components/sections/TechStack.astro';
import Contact from '../components/sections/Contact.astro';
---

<BaseLayout title="Jordan Sutarto | Creative Developer">
  
  <!-- Preloader -->
  <Preloader client:load />
  
  <!-- Hero Section with Deep Dive Parallax (sticky handled internally) -->
  <div class="relative z-0">
    <Hero />
  </div>
  
  <!-- About Section (z-10) - Paper Light, stacks over Hero -->
  <div class="relative z-10 shadow-[0_-10px_40px_-15px_rgba(0,0,0,0.5)]">
    <About />
  </div>
  
  <!-- Zoom Portal Transition (z-20) -->
  <div class="relative z-20">
    <ZoomSection client:load />
  </div>
  
  <!-- Projects Section (z-30) - Dark, seamlessly continues from zoom -->
  <div class="relative z-30">
    <ProjectsGallery />
  </div>
  
  <!-- TechStack Section (z-40) - Paper Light, arches over Projects -->
  <div class="sticky top-0 z-40 -mt-20 md:-mt-32">
    <TechStack />
  </div>
  
  <!-- Contact Section (z-50) - The Grand Finale, closes over TechStack -->
  <div class="relative z-50">
    <Contact />
  </div>

</BaseLayout>
