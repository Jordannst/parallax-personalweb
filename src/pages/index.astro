---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import About from '../components/sections/About.astro';
import ProjectsGallery from '../components/sections/ProjectsGallery.astro';
import TechStack from '../components/sections/TechStack.astro';
import Contact from '../components/sections/Contact.astro';
---

<BaseLayout title="Jordan Sutarto | Creative Developer">
  
  <!-- Hero Section (z-0) - Base layer -->
  <div class="sticky top-0 z-0">
    <Hero />
  </div>
  
  <!-- About Section (z-10) - Paper Light, stacks over Hero -->
  <div class="relative z-10 shadow-[0_-10px_40px_-15px_rgba(0,0,0,0.5)]">
    <About />
  </div>
  
  <!-- Projects Section (z-20) - Dark, stacks over About -->
  <div class="relative z-20 shadow-[0_-10px_40px_-15px_rgba(0,0,0,0.5)]">
    <ProjectsGallery />
  </div>
  
  <!-- TechStack Section (z-30) - Paper Light, stacks over Projects -->
  <div class="relative z-30 shadow-[0_-10px_40px_-15px_rgba(0,0,0,0.5)]">
    <TechStack />
  </div>
  
  <!-- Contact Section (z-40) - Dark, stacks over TechStack -->
  <div class="relative z-40 shadow-[0_-10px_40px_-15px_rgba(0,0,0,0.5)]">
    <Contact />
  </div>

  <!-- Footer -->
  <footer class="relative z-50 py-8 bg-[#050505] border-t border-white/5">
    <div class="container mx-auto px-6 text-center">
      <p class="text-sm text-white/30">
        Â© 2024 Jordan Sutarto. All rights reserved.
      </p>
    </div>
  </footer>

</BaseLayout>
